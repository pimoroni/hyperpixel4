def setup_pins():
    GPIO.setmode(GPIO.BCM)
    GPIO.setup([CLK, MOSI, CS], GPIO.OUT)
    GPIO.output(CS, 1)


def send_bits(data, count):
    mask = 1 << (count - 1)
    for x in range(count):
        GPIO.output(MOSI, (data & mask) > 0)
        data <<= 1
        time.sleep(0.00001)
        GPIO.output(CLK, 0)
        time.sleep(0.00001)
        GPIO.output(CLK, 1)
        time.sleep(0.00001)
    GPIO.output(MOSI, 0)


def write(command):
    GPIO.output(CS, 0)
    send_bits(command, 9)
    GPIO.output(CS, 1)


def setup_lcd():
    print("Setting up HyperPixel4...")
    for x in range(len(COMMANDS)):
        if COMMANDS[x] == -1:
            time.sleep(WAIT)
            continue
        write(COMMANDS[x])
        # print("0x{:03x}".format(COMMANDS[x]))


if __name__ == "__main__":
    setup_pins()
    setup_lcd()
    GPIO.cleanup()
